@model IEnumerable<Fatec.AAP4.Web.Models.contas_pagar>

@{
    ViewBag.Title = "Consulta";
}

<div class="panel panel-default">
    <div class="panel-heading">

        <h2>Contas a Pagar</h2>
    </div>

    <p>
        @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-primary btn-sm" }) <br />
    </p>
    <table class="table" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data_cadastro)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.descricao_conta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_conta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_vencimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status_conta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plano_contas.codigo_planocontas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fornecedor.cnpj)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.data_cadastro)
                </td>
                <td width="100">
                    @Html.DisplayFor(modelItem => item.descricao_conta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor_conta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.data_vencimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status_conta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.observacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.plano_contas.codigo_planocontas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fornecedor.inscricao_estadual)
                </td>
                <td width="230">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_contaspagar }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.id_contaspagar }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id_contaspagar }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>

    @if (Model.Count() != null && Model.Count() > 0)
    {
        <div class="alert alert-success" role="alert" style="text-align:right">
            <h3>Total a pagar: R$ @Model.Sum(x => x.valor_conta)</h3>
        </div>

    }

</div>