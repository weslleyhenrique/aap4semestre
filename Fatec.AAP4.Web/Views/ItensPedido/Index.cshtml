@model IEnumerable<Fatec.AAP4.Web.Models.item_pedido>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">

        <h2>Pedidos</h2>

        <h3>Index</h3>

    </div>

<div class="panel-body">

<p>
    @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-primary btn-sm" }) <br/>
</p>
<table class="table">
    <tr>
        <th>
            Código pedido
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor_unitario_item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor_total_item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.produto.descricao_produto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_item_pedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_unitario_item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_total_item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.produto.descricao_produto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.key_item }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.key_item }, new { @class = "btn btn-success btn-sm" }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.key_item }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>


</div>
</div>