@model IEnumerable<Fatec.AAP4.Web.Models.materia_prima>

@{
    ViewBag.Title = "Consulta";
}

<div class="panel panel-default">
    <div class="panel-heading">

        <h2>Cadastro de Matérias-Primas</h2>
    </div>

    <p>
        @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-primary btn-sm" }) <br />
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao_matprima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco_compra)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao_matprima)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.preco_compra)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_matprima }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.id_matprima }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id_matprima }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>