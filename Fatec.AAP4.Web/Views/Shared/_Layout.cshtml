<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AAP4</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ERP AAP4", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clientes"         , "Index",   "Clientes")</li>
                    <li>@Html.ActionLink("ContasPagar"      , "Index",   "ContasPagar")</li>
                    <li>@Html.ActionLink("ContasReceber"    , "Index",   "ContasReceber")</li>
                    <li>@Html.ActionLink("Dre"              , "Index",   "Dre")</li>
                    <li>@Html.ActionLink("EstoqueMateria"  , "Index",   "EstoqueMateria")</li>
                    <li>@Html.ActionLink("EstoqueProduto"   , "Index",   "EstoqueProduto")</li>
                    <li>@Html.ActionLink("Fornecedores"     , "Index",   "Fornecedores")</li>
                    <li>@Html.ActionLink("ForneceMaterias"  , "Index",   "ForneceMaterias")</li>
                    <li>@Html.ActionLink("ItensPedido"      , "Index",   "ItensPedido")</li>
                    <li>@Html.ActionLink("MateriasPrima"    , "Index",   "MateriasPrima")</li>
                    <li>@Html.ActionLink("OutrasContas"     , "Index",   "OutrasContas")</li>
                    <li>@Html.ActionLink("Pedidos"          , "Index",   "Pedidos")</li>
                    <li>@Html.ActionLink("PlanoContas"      , "Index",   "PlanoContas")</li>
                    <li>@Html.ActionLink("Produtos"         , "Index",   "Produtos")</li>
                    @*<li>@Html.ActionLink("About"            , "About", "About")</li>
                    <li>@Html.ActionLink("Contact"          , "Contact", "Contact")</li>*@
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AAP 4º Semetre Web Aplication</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
