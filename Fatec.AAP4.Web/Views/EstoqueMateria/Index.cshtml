@model IEnumerable<Fatec.AAP4.Web.Models.estoque_materiaprima>

@{
    ViewBag.Title = "Consulta";
}

<div class="panel panel-default">
    <div class="panel-heading">

        <h2>Cadastro de estoque - Matéria-Prima</h2>
    </div>

    <p>
        @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-primary btn-sm" }) <br />
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.materia_prima.descricao_matprima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quant_minima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quant_maxima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quant_atual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plano_contas.codigo_planocontas)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.materia_prima.descricao_matprima)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quant_minima)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quant_maxima)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quant_atual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.plano_contas.codigo_planocontas)
                </td>
     
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_estoque_matprima }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.id_estoque_matprima }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.id_estoque_matprima }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
    </div>
